  <%- include('partials/header'); -%>
  <title>Patient Details | VIT Pharmacy</title>
</head>

<body>
  <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-md-3 col-lg-2 mr-0 px-3" href="/home">VIT Pharmacy</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse"
      data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <span>
      <strong>Login ID</strong>: <%= user.id %>
    </span>
    <span>
      <strong>Username</strong>: <%= user.username %>
    </span>
    <span>
      <strong>Role</strong>: <%= user.role %>
    </span>
    <ul class="navbar-nav px-3">
      <li class="nav-item text-nowrap">
        <a class="nav-link" href="/logout">Sign out</a>
      </li>
    </ul>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/home">
                <span data-feather="bar-chart-2"></span>
                Dashboard 
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/manageUsers">
                <span data-feather="users"></span>
                Manage Users
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/createBill">
                <span data-feather="shopping-cart"></span>
                Generate bill
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/patients">
                <span data-feather="users"></span>
                Patient<span class="sr-only">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/doctors">
                <span data-feather="users"></span>
                Doctors
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/inventory">
                <span data-feather="file"></span>
                Inventory
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">

        
        <div class="container-fluid">
          <h2>Add a Patient</h2>
          <form action="/addPatient" method="POST">
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="patientName">Patient Name</label>
                <input name="patient_name" type="text" class="form-control" id="patientName" placeholder="Patient name" maxlength="45" required>
              </div>
              <div class="form-group col-md-4">
                <label for="patientContact">Contact</label>
                <input name="patient_contact" type="text" class="form-control" id="patientContact" placeholder="Contact No." maxlength="13" required>
              </div>
              
            </div>
            <div class="form-group">
              <label for="patientAddress">Address</label>
              <input name="patient_address" type="text" class="form-control" id="patientAddress" placeholder="1234 Main St" maxlength="50" required>
            </div>
            <div class="form-row">
              <div class="form-group col-md-2">
                <label for="patientGender">Gender</label>
                <select id="patientGender" class="form-control">
                  <option>Male</option>
                  <option>Female</option>
                  <option>Others</option>
                </select>
              </div>
              <div class="form-group col-md-2">
                <label for="patientAge">Age</label>
                <input name="patient_age" type="number" class="form-control" id="patientAge" required>
              </div>
              <div class="form-group col-md-4">
                <label for="patientInsuranaceId">Insurance ID</label>
                <input type="text" class="form-control" maxlength="20">
              </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>

        <div class="container-fluid">
          <h2>Patient Details</h2>
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
              <thead class="thead-dark">
                <tr>
                  <th>Name</th>
                  <th>Contact</th>
                  <th>Address</th>
                  <th>Gender</th>
                  <th>Age</th>
                  <th>Doctor</th>
                </tr>
              </thead>
              <tbody>
                <% rows.forEach(function(patient){ %>
                  <tr>
                    <td><%= patient.pat_name %></td>
                    <td><%= patient.contact %></td>
                    <td><%= patient.address %></td>
                    <td><%= patient.gender %></td>
                    <td><%= patient.age %></td>
                    <td><%= patient.doc_name %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
  </div>
  <%- include('partials/footer'); -%>
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        
        <h2>Employee details</h2>
        <button class="btn btn-dark" onclick="removeEmployee()">Remove an Employee</button><br>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
              <tr>
                <th class="empRemoveCol"></th>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Contact</th>
                <th>Address</th>
                <th>Username</th>
                <th>Role</th>
              </tr>
            </thead>
            <tbody>
              <% rows.forEach(function(employee){ %>

              <tr>
                <td class="empRemoveCell">
                  <form action="/deleteEmployee" method="POST">
                    <input name="checkbox" value="<%= employee.emp_id %>" type="checkbox" onchange="this.form.submit()">
                  </form>
                </td>
                <td><%= employee.emp_id %></td>
                <td><%= employee.emp_name %></td>
                <td><%= employee.contact %></td>
                <td><%= employee.address %></td>
                <td><%= employee.username %></td>
                <td><%= employee.role %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <h2>Add an Employee</h2>
        <div>
          <form action="/addUser" method="POST">
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="empName">Employee Name</label>
                <input name="emp_name" type="text" class="form-control" id="empName" placeholder="Employee name" maxlength="40" required>
              </div>
              <div class="form-group col-md-4">
                <label for="empContact">Contact</label>
                <input name="emp_contact" type="text" class="form-control" id="empContact" placeholder="Contact No." maxlength="13" required>
              </div>
              <div class="form-group col-md-4">
                <label for="empDOB">DOB</label>
                <input name="emp_DOB" type="date" class="form-control" id="empDOB" required>
              </div>
            </div>
            <div class="form-group">
              <label for="empAddress">Address</label>
              <input name="emp_address" type="text" class="form-control" id="empAddress" placeholder="1234 Main St" maxlength="50" required>
            </div>
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="empUsername">Username</label>
                <input name="emp_username" type="text" class="form-control" id="empUsername" maxlength="40" required>
                <% if (message.length > 0) { %>
                  <div class="alert alert-danger"><%= message %></div>
                <% } %>
              </div>
              <div class="form-group col-md-4">
                <label for="empPass">Password</label>
                <input name="emp_pass" type="password" class="form-control" id="empPass" required>
              </div>
              <div class="form-group col-md-4">
                <label for="empRole">Role</label><br>
                <select name="emp_role" id="empRole" class="form-control" required>
                  <option value="Cashier">Cashier</option>
                  <option value="Admin">Admin</option>
                  <option value="Manager">Manager</option>
                </select>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
